{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build - Debug",
            "type": "shell",
            "presentation": {
                "panel": "new"
            },
            "command": "/usr/bin/env python3 $(which scons) build profile=debug",
            "windows": {
                "command": "conda run -n modm scons build profile=debug"
            },
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Program - Debug",
            "type": "shell",
            "presentation": {
                "panel": "new"
            },
            "command": "/usr/bin/env python3 $(which scons) program profile=debug",
            "windows": {
                "command": "conda run -n modm scons program profile=debug"
            },
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Setup Build",
            "type":"shell",
            "presentation": {
                "panel": "new"
            },
            "command": "lbuild build",
            "windows": {
                "command": "conda run -n modm lbuild build"
            },
            "group": "none",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}"
            }
        },
        {
            "label": "Run Tests - Debug",
            "type": "shell",
            "presentation": {
                "panel": "new"
            },
            "command": "/usr/bin/env python3 $(which scons) run-tests profile=debug",
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceRoot}"
            }
        }
    ]
}
